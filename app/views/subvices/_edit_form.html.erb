<div class="container">
    <div class="jumbotron form-container">
        <%= form_for(@subvice) do |f| %>
            <div class="heading">Edit Sub Category</div>
            <div>
                <%= f.label :name, class: 'form-label' %>
                <%= f.text_field :name, required: true, :class => "form-control field" %>
            </div>

            <div>
                <%= f.label :per_day, class: 'form-label' %>
                <%= f.text_field :consumed_per_day, :class => "form-control field" %>
            </div>

            <div>
                <%= f.label :cost_per_day, class: 'form-label' %>
                <%= f.text_field :cost_per_day, :class => "form-control field" %>
            </div>

            <div>
                <%= f.label :goal, class: 'form-label' %>
                <%= f.text_field :goal, :class => "form-control field" %>    
            </div>

            <div class="actions">
                <span class="form-label"></span>
                <%= f.submit "Update Sub Category", :class => "btn btn-lg btn-primary" %>
            </div>  
        <% end %>  
    </div>
</div>
