<div class="container">
    <div class="jumbotron contact-box">
        <div class="heading" class="contact-form">Contact</div>
        <%= form_for inquiry do |f| %>
            <% if inquiry.errors.any? %>
                <ul>
                    <% inquiry.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            <% end %>
            <div>
                <%= f.label :name, class: 'form-label' %>
                <%= f.text_field :name, class: 'form-control name' %>
            </div>

            <div>
                <%= f.label :email, class: 'form-label' %>
                <%= f.text_field :email, class: 'form-control email' %>
            </div>

            <div>
                <%= f.label :message, class: 'form-label' %>
                <%= f.text_area :message, class: 'form-control message' %>
            </div>

            <div>
                <span class='form-label'></span>
                <%= f.submit "Send Message", class: 'btn btn-lg btn-primary' %>
            </div>
        <% end %>
    </div>
</div>
