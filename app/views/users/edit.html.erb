<h2>Edit User</h2>

    <%= form_for(@user) do |f| %>
        <div>
            <%= f.label :email %><br />
            <%= f.email_field :email %>
        </div>
        <div>
            <%= f.label :password %><br />
            <%= f.password_field :password %>
        </div>
        <div>
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation %>
        </div>
        <div>
            <%= f.submit "Update User" %>
        </div>
    <% end %>

<%= link_to 'delete account', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
