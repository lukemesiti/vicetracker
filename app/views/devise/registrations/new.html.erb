<div class="container">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" } ) do |f| %>
      <%= devise_error_messages! %>
      <h2 class="form-signin-heading">Sign up</h2>
      <div><%= f.label :email %><br />
      <%= f.email_field :email, :class => "form-control", :autofocus => true %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :class => "form-control" %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => "form-control" %></div>

      <div><%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>  
</div>


