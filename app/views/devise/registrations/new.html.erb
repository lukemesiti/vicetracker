<div class="container">
  <div class="jumbotron sign-box">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" } ) do |f| %>
      <%= devise_error_messages! %>
      <div class="heading">Sign up</div>

      <div>
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, required: true, :class => "form-control field", :autofocus => true %>
      </div>

      <div>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, required: true, :class => "form-control field" %>
      </div>

      <div>
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, required: true, :class => "form-control field" %>
      </div>

      <div>
        <%= f.label :confirm_password, class: 'form-label' %>
        <%= f.password_field :password_confirmation, required: true, :class => "form-control field" %>
      </div>

      <div>
        <span class='form-label'></span>
        <%= f.submit "Sign up", :class => "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
      
</div>


