<div class="container">
  <div class="jumbotron signup-box">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" } ) do |f| %>
      <%= devise_error_messages! %>
      <div class="heading">Sign up</div>

      <div><%= f.text_field :username, required: true, placeholder: 'Username', :class => "form-control", :autofocus => true %></div>

      <div><%= f.email_field :email, required: true, placeholder: 'Email Address', :class => "form-control" %></div>

      <div><%= f.password_field :password, required: true, placeholder: 'Password', :class => "form-control" %></div>

      <div><%= f.password_field :password_confirmation, required: true, placeholder: 'Confirm Password', :class => "form-control" %></div>
      </br>
      <div><%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>
  </div>
      
</div>


