<div class="container">
  <div class="jumbotron">
    <div>Don't have an account? <%= link_to "Sign up here!", new_user_registration_path %></div>
  
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin" } ) do |f| %>
      <div class="heading">Please sign in</div>
      
      <div><%= f.label :email %><br />
      <%= f.email_field :email, :class => "form-control", :autofocus => true %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :class => "form-control" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %> 
  </div>
     
</div>
