<div class="container">
  <div class="jumbotron sign-box">
  
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="heading">Sign in</div>
      
      <div>
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, required: true, :class => "form-control field", :autofocus => true %>
      </div>

      <div>
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, required: true, :class => "form-control field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.label :remember_me, class: 'form-label' %>
          <%= f.check_box :remember_me, :class => "form-control field" %> 
        </div>
      <% end -%>

      <div>
        <span class='form-label'></span>
        <%= f.submit "Sign in", :class => "btn btn-lg btn-primary" %>
      </div>
    <% end %> 

    <div>Don't have an account? <%= link_to "Sign up here!", new_user_registration_path %></div>
  </div>
     
</div>
