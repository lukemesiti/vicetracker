<div class="container">
    <div class="jumbotron form-container">
        <div class="heading" id="contact">Add Purchase</div>

        <%= form_for([@subvice, @purchase]) do |f| %>    
            <div>
                <%= f.label :quantity, class: 'form-label' %>
                <%= f.text_field :quantity, required: true, class: 'form-control field' %>
            </div>

            <div>
                <%= f.label :cost, class: 'form-label' %>
                <%= f.text_field :cost, required: true, class: 'form-control field' %>
            </div>

            <div class="actions">   
                <span class='form-label'></span>
                <%= f.submit 'Create Purchase', class: 'btn btn-lg btn-primary' %>
            </div>
        <% end %>
    </div>
</div>
