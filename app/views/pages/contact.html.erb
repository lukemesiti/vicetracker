<div class="container">
    <div class="jumbotron">
        <div class="heading" id="contact">Contact</div>

        <%= form_tag do %>
            <div><%= text_field_tag :firstname, nil, placeholder: 'First Name', class: 'form-control' %></div>

            <div><%= text_field_tag :lastname, nil, placeholder: 'Last Name', class: 'form-control' %></div>

            <div><%= text_field_tag :email, nil, placeholder: 'Email Address', class: 'form-control' %></div>

            <div><%= text_area_tag :message, nil, placeholder: 'Message', class: 'form-control' %></div>

            <div><%= submit_tag 'Send Message', class: 'btn btn-lg btn-primary' %></div>
        <% end %>
    </div>
</div>