<div class="container">
    <div class="jumbotron contact-box">
        <h1 id="contact">Contact</h1>

        <%= form_tag do %>
            <div>
                <div><%= text_field_tag :firstname, nil, placeholder: 'First Name', class: 'form-control name' %></div>

            <div><%= text_field_tag :lastname, nil, placeholder: 'Last Name', class: 'form-control name' %></div>
                
            </div>
            

            <div><%= text_field_tag :email, nil, placeholder: 'Email Address', class: 'form-control email' %></div>

            <div><%= text_area_tag :message, nil, placeholder: 'Message', class: 'form-control message' %></div>

            <div><%= submit_tag 'Send Message', class: 'btn btn-lg btn-primary' %></div>
        <% end %>
    </div>
</div>